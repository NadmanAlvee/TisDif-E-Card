<%- include('./partials/header.ejs') %>

    <div class="slides">
        <img src="ui/16.png" class="slide" id="slideOne" />
        <img src="ui/16s.jpg" class="slide" id="slideTwo" />
        <img src="ui/AirPods4.jpg" class="slide" id="slideThree" />
        <img src="ui/15.png" class="slide" id="slideFour" />
        <img src="ui/apple_giftcard.jpg" class="slide" id="slideFive" />
    </div>
    <div class="dot-container">
        <span class="dot" onclick="one()"></span>
        <span class="dot" onclick="two()"></span>
        <span class="dot" onclick="three()"></span>
        <span class="dot" onclick="four()"></span>
        <span class="dot" onclick="five()"></span>
    </div>

    <!-- iPhones -->
    <section class="categories" id="iPhones">
        <div class="heading">
            <h1>Browse iPhones</h1>
        </div>

        <div class="categories-container">
            <% products.forEach((product) => { if (product.category == "iphones"){ %>
                <a href="/product/<%= product._id %>">
                    <div class="product-card" data-id="<%= product._id %>">
                        
                        <% if (product.saveTag > 0) { %>
                            <div class="save-tag">Save <%= product.saveTag %>%</div>
                        <% } %>

                        <img class="main-image" src="<%= product.image.length ? product.image[0] : '/images/placeholder.jpg' %>" 
                            alt="<%= product.name %>" />
                        
                        <h3 class="product-name"><%= product.name %></h3>
                        
                        <% if (product.stock > 0) { %>
                            <div class="in-stock">In Stock: <%= product.stock %></div>
                        <% } else { %>
                            <div class="stock-out">Stock Out</div>
                        <% } %>

                        <p class="product-price">৳<%= product.price.toLocaleString() %></p>
                    </div>
                </a>
            <% }}) %>
        </div>
    </section>
