<%- include('./partials/headers/header.ejs') %>
<link rel="stylesheet" href="/css/style.css" />
    <div class="container">
        <div class="sections">
            <!-- Slide ups -->
            <div class="typewrapper">
                <div class="slideup">
                    <h2>DISCOVER</h2>
                    <ol>
                        <li><span>GIFT CARDS</span></li>
                        <li><span>IPHONES</span></li>
                        <li><span>ACCESSORIES</span></li>
                        <li><span>AND MANY MORE</span></li>
                    </ol>
                </div>
            </div>

            <!-- designs -->
            <div class="h1s">
                <h2 class="h1 p1">TISDIF E CARD</h2>
                <h2 class="h1 p2">TISDIF E CARD</h2>
                <h2 class="h1 p3">TISDIF E CARD</h2>
                <h2 class="h1 p4">TISDIF E CARD</h2>
            </div>
        </div>

        <!-- Products Sections -->
        <% const categories = ["iphones", "giftcards", "accessories"]; %>
        <% categories.forEach(category => { 
            const categoryProducts = products.filter(product => product.category === category);
            if (categoryProducts.length > 0) { %>

        <div class="categories sections" id="<%= category %>">
            <% if(category == 'giftcards') { %>
                <div class="giftcard-wrapper">
                    <div class="product-text slide-in">
                        <h2>Browse</h2>
                        <h2>Giftcards</h2>
                        <ol>
                            <li><span>The Perfect Gift</span></li>
                            <li><span>Anytime</span></li>
                            <li><span>Anywhere</span></li>
                        </ol>
                    </div>
                </div>
            <% } else if (category == 'accessories') { %>
                <div class="accessories-wrapper">
                    <div class="product-text slide-in">
                        <h2>Browse</h2>
                        <h2>Accessories</h2>
                        <ol>
                            <li><span>Small Additions</span></li>
                            <li><span>Big Impact</span></li>
                            <li><span>Elevate Your Tech</span></li>
                        </ol>
                    </div>
                </div>
            <% } %>
            <div class="categories-container">
                <% categoryProducts.forEach(product => { %>
                    <%- include('partials/homepage/product-card', { product }) %>
                <% }) %>
            </div>
        </div>
        <% } 
        }) %>
    </div>

<!-- Include footer partial -->
<%- include('./partials/footer/footer.ejs') %>

<!-- Move the Finisher Header script here -->
<script src="/scripts/index.js" defer></script>
</body>
</html>
